# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = false

[*.gitignore]
end_of_line = unset

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{html,htm,xhtml,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{json}]
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
